@model IEnumerable<MVCWarehouse.Models.StockItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



<div>
        <form method="get" action="">
            <input type="text" name="Name" placeholder="enter item Name" />
            <button type="submit">Search</button>
        </form>
        <form method="get" action="">
            <input type="text" name="Price" placeholder="enter item Price" />
            <button type="submit">Search</button>
        </form>
        <form method="get" action="">
            <input type="text" name="ArticleNumber" placeholder="enter Article Number" />
            <button type="submit">Search</button>
        </form>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShelfPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShelfPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArticleNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArticleNumber }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArticleNumber })
        </td>
    </tr>
}

</table>
